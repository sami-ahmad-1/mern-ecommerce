{
  "rewrites": [
    { "source": "/(.*)", "destination": "/" }
  ],
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node"
    },
    {
      "src": "build/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/products",
      "dest": "index.js"
    },
    {
      "src": "/products/(.*)",
      "dest": "index.js"
    },
    {
      "src": "/users",
      "dest": "index.js"
    },
    {
      "src": "/users/(.*)",
      "dest": "index.js"
    },
    {
      "src": "/auth",
      "dest": "index.js"
    },
    {
      "src": "/auth/(.*)",
      "dest": "index.js"
    },
    {
      "src": "/cart",
      "dest": "index.js"
    },
    {
      "src": "/cart/(.*)",
      "dest": "index.js"
    },
    {
      "src": "/order",
      "dest": "index.js"
    },
    {
      "src": "/order/(.*)",
      "dest": "index.js"
    },
    {
      "src": "/create-payment-intent",
      "dest": "index.js"
    },
    {
      "src": "/",
      "dest": "build/index.html"
    },
    {
      "src": "/(.+)",
      "dest": "build/$1"
    }
  ]
}
